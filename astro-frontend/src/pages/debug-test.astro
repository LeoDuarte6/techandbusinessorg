---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Debug Test" description="Testing auth modal">
  <div style="padding: 100px; text-align: center;">
    <h1 style="font-size: 48px; margin-bottom: 50px;">Debug Test Page</h1>
    
    <button 
      onclick="console.log('Button clicked'); window.openAuthModal('login'); return false;"
      style="padding: 20px 40px; font-size: 20px; background: black; color: white; border: 2px solid white; cursor: pointer; margin: 10px;"
    >
      TEST LOGIN BUTTON
    </button>

    <button 
      onclick="console.log('Signup clicked'); window.openAuthModal('signup'); return false;"
      style="padding: 20px 40px; font-size: 20px; background: white; color: black; border: 2px solid black; cursor: pointer; margin: 10px;"
    >
      TEST SIGNUP BUTTON
    </button>

    <div style="margin-top: 50px;">
      <h2>Debug Info:</h2>
      <p>Check browser console (F12) for logs</p>
      <p id="modal-status">Checking modal...</p>
    </div>
  </div>

  <script>
    // Debug script
    window.addEventListener('DOMContentLoaded', () => {
      const modal = document.getElementById('auth-modal');
      const statusEl = document.getElementById('modal-status');
      
      if (modal) {
        statusEl.textContent = '✅ Modal element found in DOM';
        console.log('Modal element:', modal);
      } else {
        statusEl.textContent = '❌ Modal element NOT found in DOM';
        console.error('Modal element not found!');
      }
      
      if (typeof window.openAuthModal === 'function') {
        console.log('✅ openAuthModal function is defined');
      } else {
        console.error('❌ openAuthModal function NOT defined');
      }
    });
  </script>
</BaseLayout>
