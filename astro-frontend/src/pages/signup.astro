---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Sign Up | Tech & Business" description="Join the Tech & Business community.">
  <div class="min-h-[80vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-[var(--theme-bg)] p-8 rounded-xl border border-[var(--theme-border)] shadow-2xl">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-[var(--theme-text)]">
          Create your account
        </h2>
        <p class="mt-2 text-center text-sm text-[var(--theme-gray)]">
          Or
          <button id="login-link" class="font-medium text-[var(--theme-text)] hover:underline focus:outline-none">
            sign in to your existing account
          </button>
        </p>
      </div>

      <!-- Google Login Button -->
      <button 
        id="page-google-login"
        class="w-full py-3 bg-white text-black border border-[var(--theme-border)] font-bold rounded-lg hover:bg-gray-50 transition-colors flex items-center justify-center gap-3"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
          <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
          <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
          <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        Continue with Google
      </button>

      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-[var(--theme-border)]"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-[var(--theme-bg)] text-[var(--theme-gray)]">Or continue with email</span>
        </div>
      </div>

      <form id="page-signup-form" class="mt-8 space-y-6">
        <div class="rounded-md shadow-sm -space-y-px">
          <div class="mb-4">
            <label for="email-address" class="sr-only">Email address</label>
            <input id="email-address" name="email" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-3 border border-[var(--theme-border)] placeholder-gray-500 text-[var(--theme-text)] bg-[var(--theme-bg)] rounded-t-md focus:outline-none focus:ring-[var(--theme-text)] focus:border-[var(--theme-text)] focus:z-10 sm:text-sm" placeholder="Email address">
          </div>
          <div>
            <label for="password" class="sr-only">Password</label>
            <input id="password" name="password" type="password" autocomplete="new-password" required class="appearance-none rounded-none relative block w-full px-3 py-3 border border-[var(--theme-border)] placeholder-gray-500 text-[var(--theme-text)] bg-[var(--theme-bg)] rounded-b-md focus:outline-none focus:ring-[var(--theme-text)] focus:border-[var(--theme-text)] focus:z-10 sm:text-sm" placeholder="Password">
          </div>
        </div>

        <div id="page-signup-error" class="hidden text-sm text-red-500 text-center"></div>

        <div>
          <button type="submit" class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-[var(--theme-bg)] bg-[var(--theme-text)] hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--theme-text)]">
            Sign up
          </button>
        </div>
      </form>
    </div>
  </div>
</BaseLayout>

<script>
  import { auth } from '../lib/supabase';

  const signupForm = document.getElementById('page-signup-form') as HTMLFormElement;
  const signupError = document.getElementById('page-signup-error');
  const googleLoginBtn = document.getElementById('page-google-login');
  const loginLink = document.getElementById('login-link');

  // Email Signup
  signupForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const email = (document.getElementById('email-address') as HTMLInputElement).value;
    const password = (document.getElementById('password') as HTMLInputElement).value;

    const { error } = await auth.signUp(email, password);
    
    if (error) {
      if (signupError) {
        signupError.textContent = error.message;
        signupError.classList.remove('hidden');
      }
    } else {
      if (signupError) {
        signupError.textContent = 'Check your email to confirm your account!';
        signupError.classList.remove('hidden', 'text-red-500');
        signupError.classList.add('text-green-500');
      }
    }
  });

  // Google Login
  googleLoginBtn?.addEventListener('click', async () => {
    const { error } = await auth.signInWithGoogle();
    if (error) {
      alert('Error signing in with Google: ' + error.message);
    }
  });

  // Login Link (Open Modal)
  loginLink?.addEventListener('click', () => {
    window.dispatchEvent(new CustomEvent('open-auth-modal', { detail: { tab: 'login' } }));
  });
</script>
