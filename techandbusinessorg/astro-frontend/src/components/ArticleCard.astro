---
import { urlFor } from '../lib/sanity';

interface Props {
  title: string;
  slug: { current: string };
  mainImage?: any;
  excerpt?: string;
  publishedAt: string;
  readTime?: number;
  author?: {
    name: string;
    slug: { current: string };
    headshot?: any;
  };
}

const { title, slug, mainImage, excerpt, publishedAt, readTime, author } = Astro.props;

const imageUrl = mainImage ? urlFor(mainImage).width(800).height(450).url() : null;
const formattedDate = new Date(publishedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<article class="group">
  <a href={`/articles/${slug.current}`} class="block">
    {imageUrl && (
      <div class="aspect-video bg-[var(--theme-gray-light)] rounded-lg overflow-hidden border border-[var(--theme-border)] mb-4 transition-colors duration-300">
        <img 
          src={imageUrl} 
          alt={title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        />
      </div>
    )}
    
    <div>
      <h3 class="text-xl md:text-2xl font-semibold mb-2 text-[var(--theme-text)] group-hover:text-[var(--theme-gray)] transition-colors">
        {title}
      </h3>
      
      {excerpt && (
        <p class="text-[var(--theme-gray)] mb-3 line-clamp-2">
          {excerpt}
        </p>
      )}
      
      {author && (
        <div class="flex items-center gap-3">
          {author.headshot ? (
            <a href={`/authors/${author.slug.current}`} class="block hover:opacity-80 transition-opacity">
              <img 
                src={urlFor(author.headshot).width(50).height(50).url()} 
                alt={author.name}
                class="w-8 h-8 rounded-full object-cover border border-[var(--theme-border)]"
              />
            </a>
          ) : (
            <a href={`/authors/${author.slug.current}`} class="block hover:opacity-80 transition-opacity">
              <div class="w-8 h-8 rounded-full bg-[var(--theme-gray-light)] flex items-center justify-center text-[var(--theme-gray)] font-bold text-xs">
                {author.name.charAt(0)}
              </div>
            </a>
          )}
          
          <div class="flex items-center gap-2 text-sm text-[var(--theme-gray)]">
            <a href={`/authors/${author.slug.current}`} class="font-medium text-[var(--theme-text)] hover:underline">
              {author.name}
            </a>
            <span>&bull;</span>
            <time datetime={publishedAt}>{formattedDate}</time>
            {readTime && (
              <>
                <span>&bull;</span>
                <span>{readTime} min read</span>
              </>
            )}
          </div>
        </div>
      )}
      {!author && (
        <div class="flex items-center gap-3 text-sm text-[var(--theme-gray)]">
          <time datetime={publishedAt}>{formattedDate}</time>
          {readTime && (
            <>
              <span>â€¢</span>
              <span>{readTime} min read</span>
            </>
          )}
        </div>
      )}
    </div>
  </a>
</article>
